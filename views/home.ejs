            <div class="text-center">
                <p class="mb-0">Designed for MNIT students, by MNIT students.</p>
            </div>
        </div>
    </footer>

    <!-- Chatbot Icon -->
    <div id="chatbot-icon" title="Chat with us">
    <svg width="36" height="36" viewBox="0 0 48 48" fill="none">
        <circle cx="24" cy="24" r="22" fill="#1976d2" stroke="#fff" stroke-width="2"/>
        <ellipse cx="24" cy="28" rx="12" ry="8" fill="#fff"/>
        <ellipse cx="18" cy="27" rx="2.5" ry="3" fill="#1976d2"/>
        <ellipse cx="30" cy="27" rx="2.5" ry="3" fill="#1976d2"/>
        <rect x="20" y="32" width="8" height="2" rx="1" fill="#1976d2"/>
        <rect x="22.5" y="10" width="3" height="7" rx="1.5" fill="#fff"/>
        <circle cx="24" cy="9" r="2" fill="#1976d2" stroke="#fff" stroke-width="1"/>
    </svg>
</div>
    <!-- Chatbot Floating Window -->
    <div id="chatbot-window">
        <div id="chatbot-header">
            <span>Buddy</span>
            <button id="chatbot-close">&times;</button>
        </div>
        <div id="chatbot-body"></div>
        <div id="chatbot-footer">
            <input type="text" id="chatbot-input" placeholder="Type your message..." />
            <button id="chatbot-send"><i class="fas fa-paper-plane"></i></button>
        </div>
    </div>
    <link rel="stylesheet" href="/stylesheets/chat_bot.css">
    <script src="/javascripts/chat_bot.js"></script>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

